{
  extends: [
    'config:recommended',
  ],
  timezone: 'UTC',
  labels: [
    'dependencies',
    'renovate',
  ],
  assignees: [
    'timgluz',
  ],
  prConcurrentLimit: 5,
  prHourlyLimit: 2,
  dependencyDashboard: true,
  vulnerabilityAlerts: {
    enabled: true,
    labels: [
      'security',
    ],
    assignees: [
      'timgluz',
    ],
  },
  semanticCommits: 'enabled',
  rebaseWhen: 'behind-base-branch',
  postUpdateOptions: [
    'gomodTidy',
  ],
  packageRules: [
    {
      matchCategories: [
        'docker',
      ],
      pinDigests: true,
    },
    {
      schedule: [
        'before 10am on monday',
      ],
      matchPackageNames: [
        '*',
      ],
    },
    {
      matchUpdateTypes: [
        'pin',
        'digest',
        'patch',
      ],
      schedule: [
        'at any time',
      ],
      labels: [
        'dependencies',
        'renovate',
        'security',
      ],
      matchPackageNames: [
        '*',
      ],
    },
    {
      matchManagers: [
        'gomod',
      ],
      groupName: 'Go module dependencies',
      semanticCommitType: 'chore',
      semanticCommitScope: 'deps',
      prBodyNotes: [
        'This PR updates Go module dependencies.',
        'All changes are grouped together for efficient review.',
      ],
    },
    {
      matchManagers: [
        'dockerfile',
      ],
      groupName: 'Docker dependencies',
      semanticCommitType: 'chore',
      semanticCommitScope: 'docker',
      prBodyNotes: [
        'This PR updates Docker base images.',
        'Digests are pinned for reproducible builds.',
      ],
    },
    {
      matchManagers: [
        'helm-values',
        'helmv3',
      ],
      groupName: 'Helm dependencies',
      semanticCommitType: 'chore',
      semanticCommitScope: 'helm',
      prBodyNotes: [
        'This PR updates Helm chart dependencies.',
        'Test the chart in a dev environment before merging.',
      ],
    },
    {
      matchDepTypes: [
        'devDependencies',
      ],
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      automerge: true,
      automergeType: 'pr',
      prBodyNotes: [
        'âš¡ This PR is eligible for auto-merge (minor/patch dev dependency).',
      ],
    },
  ],
  prTitle: '{{{semanticPrefix}}}update {{depName}} to {{#if isPinDigest}}{{{newDigestShort}}}{{else}}{{#if isMajor}}v{{{newMajor}}}{{else}}{{#if isSingleVersion}}v{{{newVersion}}}{{else}}{{{newValue}}}{{/if}}{{/if}}{{/if}}',
}
